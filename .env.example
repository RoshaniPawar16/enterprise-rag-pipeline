# ============================================
# Enterprise Multimodal RAG Pipeline
# Environment Configuration
# ============================================

# Environment (local, staging, production)
ENVIRONMENT=local

# ============================================
# Airflow Configuration
# ============================================
AIRFLOW_UID=50000
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=admin

# ============================================
# Azure Storage (Production)
# ============================================
# Set USE_AZURE=true to use Azure instead of MinIO
USE_AZURE=false
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_CONTAINER_RAW=raw-documents
AZURE_CONTAINER_PROCESSED=processed-chunks

# ============================================
# MinIO (Local Development)
# ============================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# ============================================
# Qdrant Vector Database
# ============================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=documents

# ============================================
# LLM Configuration
# ============================================
# OpenAI (optional)
OPENAI_API_KEY=

# Azure OpenAI (optional)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_KEY=
AZURE_OPENAI_DEPLOYMENT=

# Local Ollama (default)
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3.1:8b

# ============================================
# MLflow Experiment Tracking
# ============================================
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=rag-pipeline

# ============================================
# Embedding Models
# ============================================
# Options: bge-m3, all-MiniLM-L6-v2, text-embedding-3-small
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIMENSION=1024

# ============================================
# Chunking Configuration
# ============================================
CHUNK_SIZE=400
CHUNK_OVERLAP=50
CHUNKING_STRATEGY=semantic

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
